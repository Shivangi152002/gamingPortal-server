# ========================================
# GAME ADMIN SERVER - COMPLETE ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in your values
# ALL configuration is environment-driven - NO hardcoded values in code

# ========================================
# SERVER CONFIGURATION
# ========================================
# Server port (default: 3000)
PORT=3000

# Environment mode (development/production)
# CRITICAL: Set to 'development' for local testing, 'production' for deployment
NODE_ENV=development

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# Main frontend URL (where your dashboard is hosted)
# For local development: http://localhost:5174
# For production: https://yourdomain.com
FRONTEND_URL=http://localhost:5174

# Additional allowed origins (comma-separated, optional)
# Use this for multiple domains or subdomains
# Example: https://app.yourdomain.com,https://admin.yourdomain.com
ADDITIONAL_ORIGINS=

# ========================================
# SESSION CONFIGURATION
# ========================================
# Session secret - REQUIRED! Generate a secure random string
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Session timeout in milliseconds (default: 24 hours)
SESSION_MAX_AGE=86400000

# Session domain (optional, leave empty for auto-detection)
# For development: localhost
# For production: .yourdomain.com (note the leading dot)
SESSION_DOMAIN=

# ========================================
# ROOT USER CREDENTIALS
# ========================================
# Main admin account - CHANGE THESE!
ROOT_USERNAME=root
ROOT_EMAIL=root@admin.com
ROOT_PASSWORD=root123

# ========================================
# AWS S3 CONFIGURATION
# ========================================
# Get these from AWS IAM Console:
# 1. Create an IAM user with S3 permissions
# 2. Generate access keys
# 3. Create S3 bucket for game assets

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_S3_BUCKET=your-game-bucket-name

# ========================================
# CLOUDFRONT CONFIGURATION (Optional)
# ========================================
# If using CloudFront for CDN and faster delivery
# Leave empty if not using CloudFront
CLOUDFRONT_URL=https://dxxxxxxxxxxxxx.cloudfront.net

# ========================================
# FILE UPLOAD SETTINGS
# ========================================
# Max file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# ========================================
# IMPORTANT NOTES:
# ========================================
# 1. NEVER commit .env file to git
# 2. Change SESSION_SECRET to a random string
# 3. Change root credentials immediately
# 4. Keep AWS credentials secure
# 5. Use IAM user (not root AWS account)
# 6. Set up S3 bucket policy for public read access on /public/* folder
#
# Sample S3 Bucket Policy:
# {
#   "Version": "2012-10-17",
#   "Statement": [
#     {
#       "Sid": "PublicReadGetObject",
#       "Effect": "Allow",
#       "Principal": "*",
#       "Action": "s3:GetObject",
#       "Resource": "arn:aws:s3:::YOUR-BUCKET-NAME/public/*"
#     }
#   ]
# }
